<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iic.mokojin" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CurrentMatchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseCharactersActivity"
            android:label="@string/title_activity_choose_character"
            android:parentActivityName=".CurrentMatchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iic.mokojin.CurrentMatchActivity" />
        </activity>
        <activity
            android:name=".AddPlayerActivity"
            android:label="@string/title_activity_add_player"
            android:parentActivityName=".CurrentMatchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.iic.mokojin.CurrentMatchActivity" />
        </activity>
    </application>

</manifest>
