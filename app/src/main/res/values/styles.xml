<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Mokojin.Regular</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar.Mokojin.Regular</item>
    </style>

    <style name="MainPageTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Mokojin.NoTitle</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar.Mokojin.NoTitle</item>
    </style>

    <style name="CharacterPageTheme" parent="AppTheme">
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Mokojin.Regular"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="ActionBar.Mokojin.NoTitle" parent="ActionBar.Mokojin.Regular">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <style name="floatingActionButton">
        <item name="fab_plusIconColor">@color/white</item>
        <item name="fab_colorNormal">@color/primary</item>
        <item name="fab_colorPressed">@color/primary_pressed</item>
        <item name="fab_colorDisabled">@color/primary_disabled</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="EditText.Mokojin" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#D79C9C</item>
        <item name="colorControlActivated">#ffdfa4a4</item>
        <item name="colorControlHighlight">#fff4b2b2</item>
    </style>

    <style name="ProgressBar.Mokojin" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_chance_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="clockText">
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>
