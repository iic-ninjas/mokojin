<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".CurrentMatchActivity" tools:ignore="MergeRootFrame" android:orientation="horizontal">
    <fragment android:name="com.iic.mokojin.activities.PlayerQueueFragment"
        android:id="@+id/player_queue"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_player_queue" />
    <fragment android:name="com.iic.mokojin.activities.CurrentMatchFragment"
        android:id="@+id/current_match"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_current_match" />

</LinearLayout>
